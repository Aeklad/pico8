pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
x1 = 64
y1 = 64
x2 = 100
y2 = 100

function _update()
		
		cls()
		
		if btn(0) then
				x2 -= 1
		end
		
		if btn(1) then
		  x2 += 1
		end
		
		if btn(2) then
				y2 -= 1
		end
		
		if btn(3) then
				y2 += 1 
		end
		
		x = x2 - x1
		y = y2 - y1		
		
		dist = sqrt(x*x + y*y)
		
		nx = x/dist
		ny = y/dist
		print(x)
		print(y)
		print(dist)
		print(nx)
		print(ny)
		
		line(x1,y1,x2,y2,2)
		line(74,74,74+nx*10,74+ny*10,3)
end
		
		
		

