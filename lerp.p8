version 18
__lua__

origin = {
 x = 64,
 y = 64
}
function move_stuff(n)
 if btn(0) then 
  n.x -= 1
 end
 if btn(1) then
  n.x += 1
 end
 if btn(2) then
  n.y -= 1
 end
 if btn(3) then
  n.y += 1
 end
end

function _update()
 cls()
 move_stuff(origin)
 circ(origin.x,origin.y,11)
end

